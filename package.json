{
    "name": "space-tanks",
    "version": "2.3.0",
    "description": "Space, tanks.",
    "tags": "tanks, space",
    "scripts": {
        "build": "npm run clean-b & npm run type-check & npm run build-c & npm run build-s",
        "build-c": "parcel build ./src/index.html --log-level 3",
        "build-d": "npm run clean-c & npm install & npm run build",
        "build-q": "npm run clean-b &  npm run build-c & npm run build-s & npm run start",
        "build-s": "parcel build ./src/server.ts --log-level 3 --target node",
        "clean-b": "npx del-cli ./dist",
        "clean-c": "npx del-cli ./.cache",
        "code-coverage": "jest --coverage",
        "code-style": "npm run lint-check && npm run pretty-check",
        "dev": "node ./src/server.ts",
        "format": "npx prettier --write src/**",
        "gitpush": "git commit -a -m \"NPM RUN GITPUSH\" & git status & git push",
        "lint-check": "npx eslint ./src/**/*.ts",
        "test": "npx jest",
        "type-check": "tsc --noEmit",
        "pretty-check": "npx prettier -c ./src/**/*.ts",
        "start": "node ./dist/server.js"
    },
    "author": "jkanchelov",
    "license": "MIT",
    "dependencies": {
        "@types/express": "^4.17.6",
        "@types/mathjs": "^6.0.5",
        "@types/socket.io": "^2.1.4",
        "@types/socket.io-client": "^1.4.32",
        "@types/victor": "^1.1.0",
        "express": "^4.17.1",
        "mathjs": "^6.6.4",
        "pixi-particles": "^4.2.1",
        "pixi.js": "^5.2.2",
        "socket.io": "^2.3.0",
        "socket.io-client": "^2.3.0",
        "victor": "^1.1.0"
    },
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@types/jsdom": "^16.1.0",
        "@types/pixi.js": "^5.0.0",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "del-cli": "^3.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^25.4.0",
        "jest-canvas-mock": "^2.2.0",
        "jsdom": "^16.1.0",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-static-files-copy": "^2.3.1",
        "prettier": "^2.0.5",
        "ts-jest": "^25.4.0",
        "typescript": "^3.8.3"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "identity-obj-proxy"
        },
        "setupFiles": [
            "jest-canvas-mock"
        ]
    }
}
